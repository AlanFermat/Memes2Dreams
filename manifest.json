{
    "name": "Memes2Dreams",
    "version": "1.0",
    "description": "Memes2Dreams!",
    "manifest_version": 2,
    "background": {
      "scripts": ["src/background.js", "src/display.js"],
      "persistent": false
    },
    "content_scripts": [{
      "matches": ["*://*.com/*"],
      "js": ["src/content.js"]
    }],
    "permissions": ["declarativeContent", "storage", "activeTab"],
    "page_action": {
      "default_popup": "src/popup.html",
      "default_icon": {
        "16": "images/M2D16.png",
        "32": "images/M2D32.png",
        "48": "images/M2D48.png",
        "128": "images/M2D128.png"
      }
    },
    "icons": {
      "16": "images/M2D16.png",
      "32": "images/M2D32.png",
      "48": "images/M2D48.png",
      "128": "images/M2D128.png"
    },
    "options_page": "src/option.html"
  }